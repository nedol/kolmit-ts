{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowImportingTsExtensions": true,
	  "module": "esnext",
	  "moduleResolution": "node",
	  "esModuleInterop": true,
	  "strict": true,
	  "skipLibCheck": true,
	  "lib": ["dom", "esnext"]	  
	},
	"include": ["src/**/*", "svelte.config.js","src/svelte.d.ts"],
	"exclude": ["node_modules", "public"]
  }
  